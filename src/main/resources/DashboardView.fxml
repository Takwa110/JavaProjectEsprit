<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.DashboardController" spacing="10" alignment="CENTER">
    <!-- Table for displaying courses -->
    <TableView fx:id="courseTableView">
        <TableColumn fx:id="titleColumn" text="Title" />
        <TableColumn fx:id="descriptionColumn" text="Description" />
        <TableColumn fx:id="pdfPathColumn" text="PDF Path" />
    </TableView>

    <!-- Input fields for adding/editing course -->
    <TextField fx:id="titleField" promptText="Course Title" />
    <TextField fx:id="descriptionField" promptText="Course Description" />
    <TextField fx:id="pdfPathField" promptText="PDF Path" />

    <!-- Buttons for actions -->
    <Button fx:id="addCourseButton" text="Add Course" />
    <Button fx:id="deleteCourseButton" text="Delete Course" />
    <Button fx:id="updateCourseButton" text="Update Course" />
    <Button fx:id="chooseFileButton" text="Choose PDF" />
</VBox>
