<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.GetAllCoursesController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Add a Button to fetch the courses -->
    <Button fx:id="getCoursesButton" text="Get All Courses" layoutX="250" layoutY="30" onAction="#handleGetCourses" />

    <!-- Add a ListView to display the courses -->
    <ListView fx:id="coursesListView" layoutX="100" layoutY="100" prefHeight="200" prefWidth="400" />

</AnchorPane>
