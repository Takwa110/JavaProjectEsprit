<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.esprit.projets.AdminController" stylesheets="@css/style.css">
    <top>
        <HBox style="-fx-background-color: #2C3E50; -fx-padding: 10;" alignment="CENTER">
            <Label text="Tableau de bord Admin - Évaluations des cours"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Button fx:id="resetFilterButton" text="Réinitialiser le filtre" onAction="#resetFilter"
                    style="-fx-background-color: #1ABC9C; -fx-text-fill: white;"/>
            <Button fx:id="filterBadWordsButton" text="Filtrer par mauvais mots" onAction="#filterBadWords"
                    style="-fx-background-color: #1ABC9C; -fx-text-fill: white;"/>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Vue d'ensemble des commentaires et des likes"
                       style="-fx-font-size: 16px;"/>
                <TableView fx:id="tableComments">
                    <columns>
                        <TableColumn text="Cours" fx:id="colCourse" />
                        <TableColumn text="Utilisateur" fx:id="colUser" />
                        <TableColumn text="Commentaire" fx:id="colComment" />
                        <TableColumn text="Date" fx:id="colDate" />
                        <TableColumn text="Actions" fx:id="colActions" />
                    </columns>
                </TableView>
                <TableView fx:id="tableLikes">
                    <columns>
                        <TableColumn text="Cours" fx:id="colCourseLikes" />
                        <TableColumn text="J'aime" fx:id="colLikes" />
                        <TableColumn text="Actions" fx:id="colActionsLikes" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
