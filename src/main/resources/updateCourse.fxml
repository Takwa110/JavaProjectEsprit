<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.UpdateCourseController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Course Name Label and TextField -->
    <Label text="Course Name:" layoutX="50" layoutY="50" />
    <TextField fx:id="courseNameField" layoutX="150" layoutY="50" prefWidth="400" />

    <!-- Course Description Label and TextArea -->
    <Label text="Course Description:" layoutX="50" layoutY="100" />
    <TextArea fx:id="courseDescriptionField" layoutX="150" layoutY="100" prefWidth="400" prefHeight="150" wrapText="true"/>

    <!-- Update Button -->
    <Button fx:id="updateButton" text="Update Course" layoutX="250" layoutY="300" onAction="#handleUpdateCourse" />

</AnchorPane>
