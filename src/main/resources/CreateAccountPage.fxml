<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateAccountController">
    <GridPane hgap="10" vgap="10">
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Rôle:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Spécialité (si enseignant):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="specialiteField" GridPane.columnIndex="1" GridPane.rowIndex="4" disable="true"/>

        <Label text="Niveau (si étudiant):" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="niveauField" GridPane.columnIndex="1" GridPane.rowIndex="5" disable="true"/>
    </GridPane>

    <Button text="Créer un compte" onAction="#handleCreateAccountButtonAction"/>
    <Button text="Retour" onAction="#handleBackButtonAction"/>
</VBox>
